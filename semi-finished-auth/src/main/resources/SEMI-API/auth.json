{
  "/login": {
    "method": "postq",
    "summary": "登录",
    "params": {
      "@tb": "semi_user",
      "@row": 1,
      "@bean": "loginEnhance",
      "username$$": "username",
      "id:": [
        {
          "@tb": "semi_user_role",
          "@on": "user_id",
          "@": "role_id"
        },
        {
          "@tb": "semi_user_dept",
          "@on": "user_id",
          "@": "dept_id"
        }
      ]
    },
    "ruler": {
      "username": {
        "text": "username不能为空"
      },
      "password": {
        "text": "密码不能为空",
        "len>=6": "密码长度应该大于6"
      }
    }
  },
  "/signup": {
    "method": "post",
    "params": {
      "@tb": "semi_user",
      "@bean": "signupEnhance",
      "username$$": "username",
      "password$$": "password"
    },
    "ruler": {
      "username": {
        "text": "username不能为空",
        "unique": "用户已存在"
      },
      "password": {
        "text": "密码不能为空",
        "len>=6": "密码长度应该大于6"
      }
    }
  },
  "/password": {
    "method": "put",
    "params": {
      "@tb": "semi_user",
      "id$": "userId",
      "password$$": "password"
    }
  }
}

